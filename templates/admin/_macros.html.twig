{% macro back(link, text = 'app.ui.back') %}
    <i class="fa fa-chevron-left fa-back-button"></i>
    <a href="{{ link }}" class="btn-back-button">
        {{ text|trans }}
    </a>
{% endmacro %}

{% macro row(items) %}
    <div class="row">
        {% for item in items %}
        <div class="col-lg-{{ item.span }}">
            {{ form_row(item.field) }}
        </div>
        {% endfor %}
    </div>
{% endmacro %}
