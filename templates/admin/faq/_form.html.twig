{{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}

<div class="form-group padding-bottom-25">
    {{ form_label(form.question) }}
    {{ form_widget(form.question) }}
    <div class="counter-label"></div>
</div>

<hr>
{% if faq.type == constant('App\\Entity\\FAQ::TYPE_QUESTION') %}
<div class="form-group">
    {{ form_label(form.answer) }}
    {{ form_widget(form.answer) }}
    <div class="counter-label"></div>
</div>
{% endif %}

{% if faq.type == constant('App\\Entity\\FAQ::TYPE_SCHEDULE') %}

    <div class="form-group padding-bottom-25">
        <label>{{ 'app.ui.faq_time_to_order'|trans }}</label>
        <div class="row padding-bottom-25">
            <div class="col-lg-3">
                <input name="order[0][start]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.timeToPlaceAnOrder[0]['start']|default('') }}">
            </div>

            <div class="col-lg-3">
                <input name="order[0][end]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.timeToPlaceAnOrder[0]['end']|default('') }}">
            </div>
        </div>
        <div class="row padding-bottom-25">
            <div class="col-lg-3">
                <input name="order[1][start]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.timeToPlaceAnOrder[1]['start']|default('') }}">
            </div>

            <div class="col-lg-3">
                <input name="order[1][end]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.timeToPlaceAnOrder[1]['end']|default('') }}">
            </div>
        </div>
        <div class="row padding-bottom-25">
            <div class="col-lg-3">
                <input name="order[2][start]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.timeToPlaceAnOrder[2]['start']|default('') }}">
            </div>

            <div class="col-lg-3">
                <input name="order[2][end]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.timeToPlaceAnOrder[2]['end']|default('') }}">
            </div>
        </div>
    </div>

    <hr>

    <div class="form-group padding-bottom-25">
        <label>{{ 'app.ui.faq_order_delivery_time'|trans }}</label>

        <div class="row padding-bottom-25">
            <div class="col-lg-2">
                <input name="delivery[0][name]" type="text" class="form-control" maxlength="100" value="{{ faq.orderDeliveryTime[0]['name']|default('') }}">
            </div>

            <div class="col-lg-2">
                <input name="delivery[0][start]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.orderDeliveryTime[0]['start']|default('') }}">
            </div>

            <div class="col-lg-2">
                <input name="delivery[0][end]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.orderDeliveryTime[0]['end']|default('') }}">
            </div>
        </div>

        <div class="row padding-bottom-25">
            <div class="col-lg-2">
                <input name="delivery[1][name]" type="text" class="form-control" maxlength="100" value="{{ faq.orderDeliveryTime[1]['name']|default('') }}">
            </div>

            <div class="col-lg-2">
                <input name="delivery[1][start]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.orderDeliveryTime[1]['start']|default('') }}">
            </div>

            <div class="col-lg-2">
                <input name="delivery[1][end]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.orderDeliveryTime[1]['end']|default('') }}">
            </div>
        </div>

        <div class="row padding-bottom-25">
            <div class="col-lg-2">
                <input name="delivery[2][name]" type="text" class="form-control" maxlength="100" value="{{ faq.orderDeliveryTime[2]['name']|default('') }}">
            </div>

            <div class="col-lg-2">
                <input name="delivery[2][start]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.orderDeliveryTime[2]['start']|default('') }}">
            </div>

            <div class="col-lg-2">
                <input name="delivery[2][end]" type="text" class="form-control inputmask" maxlength="8" value="{{ faq.orderDeliveryTime[2]['end']|default('') }}">
            </div>
        </div>
    </div>

{% endif %}

<div class="form-group">
    <div class="text-center">
        <button class="btn btn-primary width-250" type="submit" data-style="zoom-in">{{ 'app.ui.save_changes'|trans }}</button>
    </div>
</div>

{{ form_end(form) }}
