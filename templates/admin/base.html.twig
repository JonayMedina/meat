    {% block styles %}
    {% endblock %}
    <style>
        body {
            background-color: #404040;
        }

        .pace .pace-progress {
            background: #AB162B;
        }

        #main-logo {
            width: 140px;
            text-align: center;
        }

        .nav-header {
            background-image: none;
            background-color: #404040;
        }

        .nav > li.active {
            background: #69595C;
            border-left: none;
        }

        .navbar-default .nav > li.active > a:hover, .navbar-default .nav > li.active > a:focus {
            background-color: #69595C;
        }

        .navbar-default .nav > li > a:hover, .navbar-default .nav > li > a:focus {
            background-color: #404040;
            color: white;
        }

        body.mini-navbar .nav-header {
            padding: 0;
            background-color: #404040;
        }

        body.mini-navbar #main-logo {
            width: 50px;
        }

        .btn-primary {
            color: #fff;
            background-color: #AB162B;
            border-color: #B03143;
        }

        .text-primary {
            color: #AB162B !important;
        }
    </style>
</head>
