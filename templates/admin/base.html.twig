<script src="{{asset('meathouse/js/jquery-3.1.1.min.js')}}"></script>
<script src="{{ asset('meathouse/js/popper.min.js') }}"></script>
<script src="{{ asset('meathouse/js/bootstrap.min.js') }}"></script>
