{% extends "/admin/base.html.twig" %}
{% import "admin/_macros.html.twig" as UI %}

{% block title %}{{ 'app.ui.purchase_settings'|trans }}{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="row wrapper page-heading">
            <div class="col-sm-12">
                {{ UI.back(path('purchase_settings')) }}
                <br>
                <h1>{{ 'app.ui.purchase_settings'|trans }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content padding-55">

                        {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}

                        <div class="row padding-bottom-35 border-bottom">
                            <div class="col-lg-4">
                                {{ form_row(form.maximumPurchaseValue) }}
                            </div>
                        </div>

                        <div class="row padding-bottom-35 border-bottom padding-top-35">
                            <div class="col-lg-4">
                                {{ form_row(form.minimumPurchaseValue) }}
                            </div>
                        </div>

                        <div class="row padding-bottom-35 border-bottom padding-top-35">
                            <div class="col-lg-4">
                                {{ form_row(form.daysToChooseInAdvanceToPurchase) }}
                            </div>
                        </div>

                        <br><br>
                        <div class="form-group">
                            <div class="text-center">
                                <button class="btn btn-primary width-250" type="submit" data-style="zoom-in">{{ 'app.ui.save_changes'|trans }}</button>
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block styles %}
    {{ parent() }}
{% endblock %}

{% block javascript %}
{{ parent() }}
<script>
    $(document).ready(function () {
        initCounter();
    });
</script>
{% endblock %}
