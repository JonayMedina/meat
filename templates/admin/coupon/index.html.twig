{% extends "/admin/base.html.twig" %}

{% block title %}{{ 'app.ui.coupons'|trans }}{% endblock %}

{% block content %}
    <div class="col-lg-12">

        <div class="row wrapper page-heading">
            <div class="col-sm-4">
                <h1>{{ 'app.ui.coupons'|trans }} <small>{% trans with {'%total%': total|default('app.ui.n/a'|trans)} %}app.ui.qty_of_active_coupons_%total%{% endtrans %}</small></h1>
            </div>
            <div class="col-sm-8">
                <div class="title-action">
                    <a href="#" class="btn btn-primary btn-lg btn-standard-width">
                        <i class="fa fa-plus-circle pull-left"></i>
                        &nbsp;
                        {{'app.ui.new_coupon'|trans}}
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content no-padding">

                        <div class="search-box">
                            <form action="" method="get">
                                <input type="search" name="filter" class="search-box-input form-control" placeholder="{{ 'app.ui.search_box.coupon'|trans }}" value="{{ app.request.get('filter')|default('') }}">
                            </form>
                        </div>

                        <div class="table-responsive-sm">
                            <table class="table top-products-table">
                                <thead>
                                <tr>
                                    <th>{{ knp_pagination_sortable(pagination, 'app.ui.tables.header.number'|trans(), 'coupon.id' )|raw }}</th>
                                    <th>{{ knp_pagination_sortable(pagination, 'app.ui.coupon'|trans(), 'coupon.code' )|raw }}</th>
                                    <th>{{ knp_pagination_sortable(pagination, 'app.ui.duration'|trans(), 'coupon.createdAt' )|raw }}</th>
                                    <th>{{ 'app.ui.discount_type'|trans }}</th>
                                    <th class="actions-header">{{ 'app.ui.actions'|trans }}</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for coupon in pagination %}
                                    <tr>
                                        <td>{{ coupon.id }}</td>
                                        <td>{{ coupon.code }}</td>
                                        <td>{{ coupon.createdAt|localizeddate("medium", "short")|default('app.ui.n/a'|trans) }} - {{ coupon.expiresAt ? coupon.expiresAt|localizeddate("medium", "short") : 'app.ui.n/a'|trans }}</td>
                                        <td>{{ 'app.ui.n/a'|trans }}</td>
                                        <td>
                                            <a href="#" class="btn btn-default btn-action-button">
                                                {{ 'app.ui.view'|trans }}
                                            </a>
                                            &nbsp;
                                            <a href="#" class="btn btn-danger btn-action-button">
                                                {{ 'app.ui.delete'|trans }}
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            {{ 'app.ui.no_coupons_found'|trans }}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>


                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
