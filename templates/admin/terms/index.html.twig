{% extends "/admin/base.html.twig" %}

{% block title %}{{ 'app.ui.terms_and_conditions'|trans }}{% endblock %}

{% block content %}
    <div class="col-lg-12">

        <div class="row wrapper page-heading">
            <div class="col-sm-12">
                <h1>{{ 'app.ui.terms_and_conditions'|trans }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content padding-55">
                        <p>{{ 'app.ui.terms_and_conditions_text'|trans }}</p>

                        {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                        {{ form_row(form.text) }}


                        <br><br>
                        <div class="form-group">
                            <div class="text-center">
                                <button class="btn btn-primary width-250" type="submit" data-style="zoom-in">{{ 'app.ui.save_changes'|trans }}</button>
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block styles %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('meathouse/css/plugins/summernote/summernote-bs4.css') }}">
{% endblock %}


{% block javascript %}
{{ parent() }}
<script src="{{ asset('meathouse/js/plugins/summernote/summernote-bs4.js') }}"></script>
<script>
    $(document).ready(function () {
        $('.summernote').summernote({
            height: 450,
            toolbar: [
                ['style', ['bold', 'italic', 'underline', 'style']],
                ['para', ['paragraph', 'ul', 'ol']],
                ['font', ['strikethrough']],
                ['fontsize', ['fontsize']],
            ]
        });
    });
</script>
{% endblock %}
