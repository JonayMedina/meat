{% extends "/admin/base.html.twig" %}
{% import "admin/_macros.html.twig" as UI %}

{% block title %}{{ 'app.ui.new_banner'|trans }}{% endblock %}

{% block content %}
    <div class="col-lg-12">

        <div class="row wrapper page-heading">
            <div class="col-sm-12">
                {{ UI.back(path('banners_index')) }}
                <br>
                <h1>{{ 'app.ui.new_banner_in_carrousel'|trans }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content padding-55">
                        {{ include('/admin/banner/_form.html.twig', { newButtonLabel: 'app.ui.create'|trans }) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block styles %}
    {{ parent() }}
    <style>
        #promotion_banner_startDate_date, #promotion_banner_endDate_date {
            width: 70%;
        }

        #promotion_banner_startDate_time, #promotion_banner_endDate_time {
            width: calc(30% - 20px);
            margin-left: 20px;
        }
    </style>
{% endblock %}


{% block javascript %}
{{ parent() }}
<script src="{{ asset('meathouse/js/plugins/inputmask/jquery.inputmask.min.js') }}"></script>
<script>
    $(document).ready(function () {
        $('.inputmask').inputmask("9{1,2}:99 aa");
    });
</script>
{% endblock %}
