{% extends "/admin/base.html.twig" %}
{% import "admin/_macros.html.twig" as UI %}

{% block title %}{{ user }}{% endblock %}

{% block content %}
    <div class="col-lg-12">

        <div class="row wrapper page-heading">
            <div class="col-sm-4">
                {{ UI.back(path('users_index'), 'app.ui.back_to_users') }}
                <br>
                <h1>{{ 'app.ui.user_detail'|trans }}</h1>
            </div>
            <div class="col-sm-8">
                <div class="title-action">
                    <a href="{{ path('users_edit', {id: user.id}) }}" class="btn btn-primary btn-lg btn-standard-width">
                        {{'app.ui.edit_user'|trans}}
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="show-container">
                            <div class="row padding-bottom-35">
                                <div class="col-lg-6">
                                    <h3>{{ 'app.ui.first_name'|trans }}</h3>
                                    {{ user.firstName }}
                                </div>
                                <div class="col-lg-6">
                                    <h3>{{ 'app.ui.last_name'|trans }}</h3>
                                    {{ user.lastName }}
                                </div>
                            </div>

                            <div class="row padding-bottom-35">
                                <div class="col-lg-6">
                                    <h3>{{ 'app.ui.email'|trans }}</h3>
                                    {{ user.email }}
                                </div>
                                <div class="col-lg-6">
                                    <h3>{{ 'app.ui.role'|trans }}</h3>
                                    {{ user.roles|translated_roles }}
                                </div>
                            </div>

                            <div class="row padding-bottom-35">
                                <div class="col-lg-6">
                                    <h3>{{ 'app.ui.created_at'|trans }}</h3>
                                    {{ user.createdAt|localizeddate('medium', 'none') }}
                                </div>
                                <div class="col-lg-6">
                                    <h3>{{ 'app.ui.created_by'|trans }}</h3>
                                    {{ user.createdBy }}
                                </div>
                            </div>

                            <div class="row padding-bottom-35">
                                <div class="col-lg-6">
                                    <h3>{{ 'app.ui.updated_at'|trans }}</h3>
                                    {{ user.updatedAt|localizeddate('medium', 'none') }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
