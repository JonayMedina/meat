{% extends '@SyliusShop/layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-12 pt-5 pb-5 mb-5 mt-5 xs-mt-0">
            <div class="row xs-segment">
                <div class="col-12 col-sm-12 col-md-7 col-lg-7 sm-text-center sm-mt-5 sm-pl-0-i sm-pr-0-i sm-order-2 xs-mt-2">
                    <img class="w-75 sm-w-100-i" src="{{ asset('bundles/syliusshop/img/work-with-us.png') }}" alt="500" title="500" width="auto" height="auto">
                </div>
                <div class="col-12 col-sm-12 col-md-5 col-lg-5 d-flex align-items-center sm-order-1">
                    <div class="text-center xs-text-left-i">
                        <h1>{{ 'app.ui.work_with_us'|trans }}</h1>
                        {% set email = '<a href="mailto:' ~ (sylius.channel.contactEmail)|default('example@mnc.com') ~ '">' ~ (sylius.channel.contactEmail)|default('example@mnc.com') ~ '</a>' %}
                        <p class="text-center xs-text-left-i">{{ 'app.ui.work_with_us.message_%email%'|trans({'%email%': email})|raw }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
