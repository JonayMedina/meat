<div class="d-block d-sm-block d-md-block d-lg-none">
    <a class="navbar-brand" href="{{ path('sylius_shop_homepage') }}"><img src="{{ asset('bundles/syliusshop/img/logo.png') }}" alt="{{ app_name }} logo" title="{{ sylius.channel.name }} logo" width="auto" height="auto"/></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>
<div class="collapse navbar-collapse d-flex justify-content-end flex-wrap" id="navbarNav">
    <div class="container d-flex justify-content-end flex-wrap position-relative">
        <a class="navbar-brand d-none d-sm-none d-md-none d-lg-block" href="{{ path('sylius_shop_homepage') }}"><img src="{{ asset('bundles/syliusshop/img/logo.png') }}" alt="{{ app_name }} logo" title="{{ sylius.channel.name }} logo" width="auto" height="auto"/></a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="#" class="nav-link">{{ 'sylius.ui.wholesalers'|trans }}</a>
            </li>

            {% if is_granted('ROLE_USER') %}
                <div class="item">{{ 'sylius.ui.hello'|trans }} {{ app.user.customer.fullName }}!</div>

                <li class="nav-item">
                    <a href="{{ path('sylius_shop_account_dashboard') }}" class="nav-link">{{ 'sylius.ui.my_account'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('sylius_shop_logout') }}" class="nav-link sylius-logout-button">{{ 'sylius.ui.logout'|trans }}</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a href="{{ path('sylius_shop_login') }}" class="nav-link">{{ 'sylius.ui.login'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('sylius_shop_register') }}" class="nav-link">{{ 'sylius.ui.register'|trans }}</a>
                </li>
            {% endif %}
        </ul>
    </div>
    <div class="sub-navbar-nav bg-white">
        <div class="container d-flex justify-content-space-beetwen">
            <ul>
                <li class="nav-item">
                    <a href="#" class="nav-link">{{ 'sylius.ui.catalogue'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">{{ 'sylius.ui.locations'|trans }}</a>
                </li>
            </ul>

            {{ render(url('sylius_shop_partial_cart_summary', {'template': '@SyliusShop/Cart/_widget.html.twig'})) }}
        </div>
    </div>
</div>
